<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvRecordatorio"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloRecordatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:text="Nombre de recordatorio" />

            <TextView
                android:id="@+id/tvFechaAgendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:text="Fecha agendada para recordatorio" />

            <TextView
                android:id="@+id/tvTipoActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:textStyle="italic"
                android:text="Tipo de actividad"
                android:drawableLeft="@drawable/ic_edit_note"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/tvHoraNotificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:text="Hora de la notificacion"
                android:drawableLeft="@drawable/ic_notifications"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>